{{!--
Це код container файлу для web сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/web"
--}}

<div>
    {{#with web}}
    <main>
        <section>
            <h1>Languages pages</h1>
            <ol>
                {{#each languages}}
                    <li>
                        <div>{{name}}</div>
                        <div>{{version}}</div>
                        <div>{{description}}</div>
                        <ul>
                            {{#each elements}}
                            <li>
                                <div>{{name}}</div>
                                <div>{{description}}</div>
                                <ul>
                                    {{#each attributes}}
                                    <li>
                                        <div>{{name}}</div>
                                        <div>{{description}}</div>
                                    </li>
                                    {{/each}}
                                </ul>
                            </li>
                            {{/each}}
                        </ul>    
                        <ul>
                            {{#each properties}}
                            <li>
                                <div>{{name}}</div>
                                <div>{{description}}</div>
                                <ul>
                                    {{#each values}}
                                    <li>
                                        <div>{{name}}</div>
                                        <div>{{description}}</div>
                                    </li>
                                    {{/each}}
                                </ul>
                            </li>
                            {{/each}}
                        </ul>
                        <ul>
                            {{#each functions}}
                            <li>
                                <div>{{name}}</div>
                                <div>{{description}}</div>
                                <ul>
                                    {{#each parameters}}
                                    <li>
                                        <div>{{name}}</div>
                                        <div>{{type}}</div>
                                        <div>{{description}}</div>
                                    </li>
                                    {{/each}}
                                </ul>
                            </li>
                            {{/each}}
                        </ul>
                    </li>
                {{/each}}
            </ol>
            <br>
            <hr>
        </section>
    </main>
    {{/with}}
</div>

{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}