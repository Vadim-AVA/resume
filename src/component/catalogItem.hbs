{{#each goodsList}}
    <section class="card col-4 m-2">
        <img class="card-img-top" src={{img}} alt={{name}}>
        <div class="ms-2">
        <div class="mt-2">
        {{#if isHot}}
        <span class="badge text-bg-warning rounded-pill col">HOT!</span>
        {{/if}}
        {{#if isNew}}
        <span class="badge text-bg-primary rounded-pill col">Нове</span>
        {{/if}}
        </div>
        <div class="mt-4">
        {{#if isFast}}
        <span class="badge text-bg-success">Швидка доставка</span>
        {{/if}}
        </div>
        <div class="mt-2">                                
        {{#if isFree}}
        <span class="badge text-bg-dark">Безкоштовна доставка</span>
        {{/if}}
        </div>
        <div class="h2 mt-3">{{name}}</div>
        <div class="mt-4">
        {{#with review}}
        <div>{{amount}} {{text}}</div>
        {{/with}}
        <div class="h2 mt-4">{{price}}</div>
        <div class="mt-4 mb-4">{{delivery}}</div>
        {{#each buttons}}
        <div class="mt-2">
            {{#if isPrimary}}
            <a href={{link}} class="btn btn-primary">{{text}}</a>
            {{/if}}
            {{#if isSecondary}}
            <a href={{link}} class="btn btn-secondary">{{text}}</a>
            {{/if}}
        </div>
        {{/each}}
        <ul class="mt-4">
        {{#each characteristics}}
            <li>
                <div>{{title}}: {{value}}</div>
            </li>
        {{/each}}
        </ul>
        </div>
    </section>
{{/each}}
